<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/color_white"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_title_height"
        android:background="@drawable/main_title_background"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/health_nutrition_header_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/main_title_margin_top"
            android:text="饮奶营养成分"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/main_title_text_size" />
        
        <ImageView
            android:id="@+id/health_nutrition_back"
            android:layout_width="@dimen/back_icon_width"
            android:layout_height="@dimen/back_icon_height"
            android:layout_alignBottom="@+id/health_nutrition_header_layout"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/details_back_icon_margin_left"
            android:scaleType="centerInside"
            android:src="@drawable/back_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/health_nutrition_time_navigation" >

        <TextView
            android:id="@+id/health_nutrition_time_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="2015年-3月-9号"
            android:textColor="@color/health_nutrition_time_now_text_color"
            android:textSize="@dimen/health_nutrition_time_now_text_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "1" >

        <LinearLayout
            android:id="@+id/health_nutrition_sector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
